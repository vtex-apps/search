{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": "airbnb",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "import/no-unresolved": 0,
    "react/jsx-filename-extension": 0,
    "react/jsx-props-no-spreading": 0
  },
  "overrides": [
    {
      "files": ["commons/*.js", "components/*.js"]
    }
  ]
}
